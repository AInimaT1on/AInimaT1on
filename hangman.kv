BoxLayout:

	orientation: 'vertical'

	MDToolbar:
		title:'Hangman'
		md_bg_color: (31/255, 31/255, 31/255, 1)
		specific_text_color: (134/255, 5/255, 209/255, 1)
		elevation:10
		right_action_items:[['run', lambda x:x]]
	
	MDBottomNavigation:
		#Color
		panel_color: (31/255, 31/255, 31/255, 1)

		#Main Page HOME
		MDBottomNavigationItem:
			name: 'Home'
			text:'Home'
			icon: 'home'
			
			FloatLayout:
				canvas.before:
					Rectangle:
						size: self.size
						pos: self.pos
						source: 'about.jpg'
				size: root.width, root.height


				MDLabel:
					text:'Hangman'
					pos_hint: {'y':.3}
					halign: 'center'
					font_style: 'H1'
					italic: True
					color: (1,1,1, 1)
					#outline_color: (0,0,1)
					#outline_width: 2
				MDLabel:
					text:'Made by: Sven Skyth Henriksen, Mark Skinner, Joshua Batt, Olatunde Salami, Daniel Biman and Madina Zhenisbek'
					pos_hint: {'y':-0.4}
					halign:'center'
					font_style: 'Overline'
					color: (1,1,1,1)
					
				
					

				
		
		MDBottomNavigationItem:
			name: 'Play'
			text:'Play'
			icon: 'play'
			
			FloatLayout:

				FitImage:
					source: 'wasted_final.jpg'
					#pos_hint: {'x':0 ,'y':-0.3}
				
				MDFillRoundFlatIconButton:
					text:'Start Playing'
					pos_hint: {'center_x':.5, "center_y": .5}
					icon:'video'
					color:(134/255, 5/255, 209/255, 1)
					on_press: app.load_file()

					


		
		MDBottomNavigationItem:
			name: 'About'
			text:'About'
			icon: 'clipboard-text'
			
			FloatLayout:
				canvas.before:
					Rectangle:
						size: self.size
						pos: self.pos
						source: 'about.jpg'
				size: root.width, root.height

				MDLabel:
					text:'About'
					pos_hint: {'y':.3}
					halign: 'center'
					font_style: 'H4'
					italic: True
					color: (1,1,1,1)
					outline_color: (0,0,0)
					outline_width: 2
				
				MDLabel:
					text:'This a hangman game created be Strive School Students. We used sign language reconigtion, Opencv and basic Python to create this application.'
					pos_hint: {'y':-0.1}
					halign: 'center'
					font_style: 'Body1'
					color: (1,1,1,1)
					
				